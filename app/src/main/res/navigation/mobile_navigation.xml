<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.boardex.proyectosemestre.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.boardex.proyectosemestre.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_nav_gallery_to_newGameFragment"
            app:destination="@id/newGameFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.boardex.proyectosemestre.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.boardex.proyectosemestre.ProfileFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/newGameFragment"
        android:name="com.boardex.proyectosemestre.NewGameFragment"
        android:label="@string/menu_new_game"
        tools:layout="@layout/fragment_new_game" >
        <action
            android:id="@+id/action_newGameFragment_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <activity
        android:id="@+id/homeActivity"
        android:name="com.boardex.proyectosemestre.HomeActivity"
        android:label="app_bar_home"
        tools:layout="@layout/app_bar_home" />
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.boardex.proyectosemestre.MapsFragment"
        android:label="@string/menu_maps"
        tools:layout="@layout/fragment_maps" />
</navigation>